<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="top"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:paddingTop="90dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="СЛОВО В СЕРДЦЕ"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="Приложение для быстрого
запоминания ситихов из Библии."
            android:textColor="@color/colorTextInBlock"
            android:textSize="18sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:paddingBottom="90dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="В сердце моём сокрыл я слово Твоё, чтобы не грешить перед Тобою"
            android:textColor="@color/colorTextInBlock"
            android:textSize="18sp"
            android:layout_height="wrap_content"
        />
        <TextView
            android:layout_width="match_parent"
            android:gravity="right"
            android:text="Псалом 118:11"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:src="@drawable/splash_image"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

    </LinearLayout>

