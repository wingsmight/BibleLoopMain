        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/knowLayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLyricsTitleBlock"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/learnLater"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="@color/colorTextInBlock"
            android:text="Учить позже"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:focusable="false"

            />

        <Button
            android:id="@+id/remember"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="@color/colorPrimary"
            android:text="Запомнил"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:focusable="false"

            />

    </LinearLayout>

    <Button
        android:id="@+id/learnAgain"
        android:background="@color/colorLyricsTitleBlock"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textColor="@color/colorPrimary"
        android:text="@string/learnAgain"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:focusable="false"
        android:visibility="gone"
        />

</LinearLayout>