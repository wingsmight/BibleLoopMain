<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:focusable="false"
        android:layout_height="wrap_content">

        <com.wingsmight.bibleloop.ExpandableTextView
            android:id="@+id/expandableTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:maxLines="2"
            android:ellipsize="end"
            android:padding="16dp"
            app:animation_duration="500"
            android:minHeight="60dp"
            android:textColor="@color/colorTextInBlock"
            android:minLines="2"
            android:textSize="20sp"
            android:background="@color/colorLyricsTitleBlock"
            />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="right|top"
            android:src="@drawable/arrow_down"/>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/downloadLayout"
        android:background="@color/colorLyricsTitleBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <Button
            android:id="@+id/downloadButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Слушать"
            android:textColor="@color/colorTextListen"
            android:textSize="15sp"
            android:onClick="OnDownloadFile"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:focusable="false"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textForLittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@color/colorLyricsTitleBlock"
            android:text="Слушать:"
            android:textColor="@color/colorTextListen"
            android:textSize="18sp"
            android:gravity="center"
            />

        <LinearLayout
            android:id="@+id/listenLayout"
            android:visibility="visible"
            android:background="@color/colorLyricsTitleBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center"
            android:padding="5dp">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/loop5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitStart"
                    android:layout_gravity="left|center"
                    android:src="@drawable/lock"
                    android:onClick="OnSetLooping5"
                    />
                <TextView
                    android:id="@+id/loop5TextNotPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="5 раз"
                    android:textColor="@color/colorTextListen"
                    android:onClick="OnSetLooping5"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    />
                <TextView
                    android:id="@+id/loop5TextPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="5 раз"
                    android:textColor="@color/colorTextListen"
                    android:onClick="OnSetLooping5"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/loop20"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitStart"
                    android:layout_gravity="left|center"
                    android:src="@drawable/lock"
                    android:onClick="OnSetLooping20"
                    />
                <TextView
                    android:id="@+id/loop20TextNotPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="20 раз"
                    android:textColor="@color/colorTextListen"
                    android:onClick="OnSetLooping20"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    />
                <TextView
                    android:id="@+id/loop20TextPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="20 раз"
                    android:textColor="@color/colorTextListen"
                    android:onClick="OnSetLooping20"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/loop50"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitStart"
                    android:layout_gravity="left|center"
                    android:src="@drawable/lock"
                    android:onClick="OnSetLooping50"
                    />
                <TextView
                    android:id="@+id/loop50TextNotPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="50 раз"
                    android:textColor="@color/colorTextListen"
                    android:onClick="OnSetLooping50"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    />
                <TextView
                    android:id="@+id/loop50TextPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="50 раз"
                    android:textColor="@color/colorTextListen"
                    android:onClick="OnSetLooping50"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    />
            </FrameLayout>

